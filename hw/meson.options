option(
    'vlog_custom_cmd',
    type: 'array',
    description: 'Custom command to run vlog',
)

option(
    'vsim_custom_cmd',
    type: 'array',
    description: 'Custom command to run vsim',
)

option(
    'fpga_cable',
    type: 'string',
    value: 'ft2232',
    description: 'FPGA cable type',
)
